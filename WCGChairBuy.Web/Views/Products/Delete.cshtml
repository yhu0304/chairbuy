@model WCGChairBuy.Web.Db.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>Delete</h2>

<div class="alert alert-danger" style="margin-top:10px;" role="alert">确定删除?</div>

<div class="panel panel-default">
    <div class="panel-body">
        <div>
            <h4>产品信息</h4>

            <dl class="dl-horizontal">
                <dt>
                    产品名称
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>
                    价格
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    添加时间
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedTime)
                </dd>

                <dt>
                    型号
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModelNumber)
                </dd>

                <dt>
                    描述
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    图片
                </dt>

                <dd>
                    <img style="height:200px" src="@Url.Content("~/Images/"+Model.ImageUrl)" />
                    @*@Html.DisplayFor(model => model.ImageUrl)*@
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="删除" class="btn btn-danger" /> |
                    @Html.ActionLink("返回列表", "Index")
                </div>
            }
        </div>
    </div>
</div>

