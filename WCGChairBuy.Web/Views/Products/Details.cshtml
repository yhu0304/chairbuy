@model WCGChairBuy.Web.Db.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>产品详细信息</h2>

<div class="panel panel-default">
    <div class="panel-body">
        <div>
            <dl class="dl-horizontal">
                <dt>
                    产品名称
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>

                <dt>
                    价格
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    添加时间
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CreatedTime)
                </dd>

                <dt>
                    型号
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ModelNumber)
                </dd>

                <dt>
                    描述
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>

                <dt>
                    图片
                </dt>

                <dd>
                    <img style="height:200px" src="@Url.Content("~/Images/"+Model.ImageUrl)" />
                    @*@Html.DisplayFor(model => model.ImageUrl)*@
                </dd>

            </dl>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("返回列表", "Index")
</p>
