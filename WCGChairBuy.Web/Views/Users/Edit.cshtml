@model WCGChairBuy.Web.Db.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>修改</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>用户信息</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">用户名</label> 
            <div class="col-md-10">
                @Html.HiddenFor(model => model.UserName)
                <label>@Model.UserName</label>
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">邮箱</label> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">用户类型</label> 
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.UserType, new { @class = "form-control" })*@

                @Html.RadioButtonFor(model => model.UserType, "0", new { htmlAttributes = new { @class = "form-control" } }) 普通
                @Html.RadioButtonFor(model => model.UserType, "1", new { htmlAttributes = new { @class = "form-control" } }) 管理员
                @Html.ValidationMessageFor(model => model.UserType)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">联系电话</label> 
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Phone)
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">性别</label> 
            <div class="col-md-10">
                @*@Html.TextBoxFor(model => model.Sex,new { @class= "form-control" })*@
                @Html.RadioButtonFor(model => model.Sex, "0", new { htmlAttributes = new { @class = "form-control" } })女
                @Html.RadioButtonFor(model => model.Sex, "1", new { htmlAttributes = new { @class = "form-control" } })男
                @Html.ValidationMessageFor(model => model.Sex)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("返回列表", "Index")
</div>
