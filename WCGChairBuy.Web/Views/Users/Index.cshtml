@model IEnumerable<WCGChairBuy.Web.Db.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h2>用户管理</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create")">添加用户</a>
</p>
<table class="table">
    <tr>
        <th>
            用户名
        </th>
        <th>
            密码
        </th>
        <th>
            邮箱
        </th>
        <th>
            用户类型
        </th>
        <th>
            联系电话
        </th>
        <th>
            性别
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <label>@(item.UserType == 0 ? "普通用户" : "管理员")</label>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <label>@(item.Sex == 1 ? "男" : "女")</label>
            </td>
            <td>
                <a class="btn btn-success btn-xs" href="@Url.Action("Edit", new { id = item.Id })">修改</a>&nbsp;
                <a class="btn btn-primary btn-xs" " href="@Url.Action("Details", new { id = item.Id })">详细</a>&nbsp;
                <a class="btn btn-danger btn-xs" " href="@Url.Action("Delete", new { id = item.Id })">删除</a>
            </td>
        </tr>
    }

</table>
