<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WCGChairBuy.COM</title>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style type="text/css">
        body{padding:0 20px;}
        h1, h2, h3 {
            font-family:'Microsoft YaHei';
        }
        dd,dt{padding:5px;}
        .description p {
            position: relative;
            line-height: 1.4em;
            height: 4.2em;
            overflow: hidden;
        }
        .description p::after {
            content: "...";
            font-weight: bold;
            position: absolute;
            bottom: 0px;
            right: 0;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle-navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">商城后台管理</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Users")">用户管理</a></li>
                    <li><a href="@Url.Action("Index","Products")">产品管理</a></li>
                    <li><a href="@Url.Action("Index","Orders")">订单管理</a></li>
                    @*<li><a href="@Url.Action("Index","Message")">消息管理</a></li>*@
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.Identity.Name == "admin")
                        {
                            <li><a href="@Url.Action("Index","Home")" class="btn btn-link" style="color:deepskyblue;">商城首页</a></li>
                        }
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">你好!@User.Identity.Name <span class="caret"></span></a><ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","PersonalCenter")">个人中心</a></li>
                                <li><a href="@Url.Action("ShoppingCharts", "PersonalCenter")">购物车</a></li>
                                <li><a href="@Url.Action("Logout","Home")">退出登录</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login","Home")">请登录</a></li>
                        <li><a href="@Url.Action("Regist","Home")">注册</a></li>
                    }
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    @RenderBody()
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>