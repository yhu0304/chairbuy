<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - WCGChairBuy.COM</title>
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style type="text/css">
    </style>
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WCGChairBuy.COM", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="@Url.Action("Index","Home")">马上定制</a></li>
                    <li><a href="@Url.Action("About","Home")">关于我们</a></li>
                    <li><a href="@Url.Action("Index","Message")">我要留言</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        if (User.Identity.Name == "admin")
                        {
                            <li><a href="@Url.Action("Index","Admin")" class="btn btn-link" style="color:red;">后台管理</a></li>
                        }
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">你好!@User.Identity.Name <span class="caret"></span></a><ul class="dropdown-menu">
                                <li><a href="@Url.Action("Index","PersonalCenter")">个人中心</a></li>
                                <li><a href="@Url.Action("ShoppingCharts", "PersonalCenter")">购物车</a></li>
                                <li><a href="@Url.Action("Logout","Home")">退出登录</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login","Home")">请登录</a></li>
                        <li><a href="@Url.Action("Regist","Home")">注册</a></li>
                    }
                </ul>
            </div>
            <div></div>
        </div>
    </div>


    <div class="container body-content">
        <div style="height:30px;"></div>
        @RenderBody()
        <hr style="margin-top:180px;" />
        <footer>
            <p style="text-align:center;">
                友情链接：<a href="http://www.taobao.com" target="_blank">淘宝网</a>
                &nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://www.jd.com" target="_blank">京东商城</a>
                &nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://www.suning.com" target="_blank">苏宁易购</a>
                &nbsp;&nbsp;|&nbsp;&nbsp;<a href="http://www.suning.com" target="_blank">天猫</a>
            </p>
            <p style="text-align:center;">&copy; @DateTime.Now.Year - WCGChairBuy.com</p>
        </footer>
    </div>

    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>